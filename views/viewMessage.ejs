<%- include('header') %>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <% if(success) {%>
        <p><%= success %></p>
    <% } %>    
    <table class="table table-striped table-primary">
        <thead>
            <tr>
                <th>Message</th>
                <th>Message Category</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% if(results.length >0){
                results.forEach(function(row){
            %>
            <tr>
                <td><%- row.message %></td>
                <td><%= row.categoryOption %></td>
                <td><a class="btn btn-primary btn-xs" href="/viewMessage/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-danger btn-xs" href="/viewMessage/delete/<%= row._id %>"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
            <%  }) } %>
        </tbody>
    </table>
    <% if (pages > 0) { %>
        <ul class="pagination text-center">
            <% if (current == 1) { %>
                <li class="disabled"><a>First</a></li>
            <% } else { %>
                <li><a href="/viewMessage/1">First</a></li>
            <% } %>
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
                <li class="disabled"><a>...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                <% if (i == current) { %>
                    <li class="active"><a><%= i %></a></li>
                <% } else { %>
                    <li><a href="/viewMessage/<%= i %>"><%= i %></a></li>
                <% } %>
                <% if (i == Number(current) + 4 && i < pages) { %>
                    <li class="disabled"><a>...</a></li>
                <% } %>
            <% } %>
            <% if (current == pages) { %>
                <li class="disabled"><a>Last</a></li>
            <% } else { %>
                <li><a href="/viewMessage/<%= pages %>">Last</a></li>
            <% } %>
        </ul>
    <% } %>
  </body>
</html>