<%- include('header') %>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <div class="form-group">
        <% if(success) {%>
            <p><% success %></p>
        <% } %> 
        <form action="/addNewMessage" method="POST">
            <select class="form-control" name="categoryOption">
                <option value=""> Select Category</option>
                <% if(record.length > 0){
                    record.forEach(function(row){
                    %>
                   <option value="<%= row.categoryName %>"><%= row.categoryName %></option>
                <%  }) } %>
            </select>
            <textarea class="form-control" type="text" id="editor" name="message" rows="5" placeholder="Enter your message" ></textarea>
            <input type="submit" class="btn btn-primary" value="Add Message"/>
        </form>
    </div>
    <p><a href="/category"> View All Category</a></p>
    <script>
        CKEDITOR.replace( 'editor' );
    </script>
  </body>
</html>